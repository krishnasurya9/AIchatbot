{
    "name": "ai-debugger",
    "displayName": "AI Dev Companion",
    "description": "AI-powered debugging and tutoring assistant with shared conversation history",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Programming Languages",
        "Education",
        "Debuggers"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ai-debugger.askQuestion",
                "title": "AI Tutor: Ask Question",
                "category": "AI Dev Companion"
            },
            {
                "command": "ai-debugger.openPanel",
                "title": "Open AI Assistant Panel",
                "category": "AI Dev Companion"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ai-debugger",
                    "title": "AI Dev Companion",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "ai-debugger": [
                {
                    "type": "webview",
                    "id": "ai-debugger-view",
                    "name": "Chat Assistant"
                }
            ]
        },
        "keybindings": [
            {
                "command": "ai-debugger.askQuestion",
                "key": "ctrl+shift+a",
                "mac": "cmd+shift+a",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "dev": "code --extensionDevelopmentPath ."
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.14.0",
        "@types/uuid": "^10.0.0",
        "@types/vscode": "^1.90.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "eslint": "^8.57.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "axios": "^1.7.2",
        "uuid": "^10.0.0"
    }
}
